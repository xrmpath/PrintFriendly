{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "lib": ["es2015", "dom", "scripthost"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [ "node_modules", "Scripts/typings" ],
  "include": [
    "./**/*.ts", "./node_modules/spine-ts"
  ],
  "esModuleInterop": true
}
